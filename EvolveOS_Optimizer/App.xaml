<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="EvolveOS_Optimizer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EvolveOS_Optimizer">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Assets/Fonts/Fonts.xaml" />
                <ResourceDictionary Source="/Styles/Themes/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons/RadioButtons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="MyDynamicAccentBrush" Color="{ThemeResource SystemAccentColor}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>