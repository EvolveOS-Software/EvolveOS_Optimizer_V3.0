            DefaultLabelPosition="Collapsed" 
            HorizontalAlignment="Right" 
            Margin="0,10,0,0">

            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Setting" 
                      Width="48" 
                      HorizontalAlignment="Center">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel Spacing="10" MinWidth="200">
                                <TextBlock Text="{helpers:ResourceString Key=settings_card_effects}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                <CheckBox Content="{helpers:ResourceString Key=settings_hover_glow}" IsChecked="{Binding IsHoverGlowEnabled, Mode=TwoWay}"/>
                                <CheckBox Content="{helpers:ResourceString Key=settings_selection_glow}" IsChecked="{Binding IsSelectionGlowEnabled, Mode=TwoWay}"/>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
        </CommandBar>

