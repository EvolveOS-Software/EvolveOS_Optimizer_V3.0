      xmlns:pa="using:EvolveOS_Optimizer.Assets.Panels"
      xmlns:uc="using:EvolveOS_Optimizer.Assets.UserControl"
      xmlns:converters="using:EvolveOS_Optimizer.Utilities.Converters"
      xmlns:anim="using:EvolveOS_Optimizer.Utilities.Animation"
      xmlns:helpers="using:EvolveOS_Optimizer.Utilities.Helpers"
      xmlns:ui="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d" NavigationCacheMode="Disabled" Unloaded="Page_Unloaded">

    <Page.DataContext>
        <vm:PackagesViewModel />
    </Page.DataContext>

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToOpacityConverter x:Key="InverseBoolToOpacity" />
        
        <x:String x:Key="HexagonPathData">M 50,0 L 93.3,25 L 93.3,75 L 50,100 L 6.7,75 L 6.7,25 Z</x:String>

        <Style x:Key="HexagonCardStyle" TargetType="ContentControl">
            <Setter Property="Width" Value="85"/>
            <Setter Property="Height" Value="95"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Grid x:Name="CardGrid" Width="85" Height="95" Background="Transparent" Loaded="PackageView_Loaded">

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SelectedGlowPath" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderPath" Storyboard.TargetProperty="Stroke">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource MyDynamicAccentBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SelectedGlowPath" Storyboard.TargetProperty="Opacity" To="0.7" Duration="0:0:0.0"/>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderPath" Storyboard.TargetProperty="Stroke">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Red"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Grid x:Name="AnimationContainer" Background="Transparent" PointerEntered="Package_PointerEntered" PointerExited="Package_PointerExited" RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <CompositeTransform x:Name="MainTransform"/>
                                </Grid.RenderTransform>

                                <Path x:Name="ShadowPath"
                                      Data="{StaticResource HexagonPathData}"
                                      Stretch="Fill"
                                      Fill="{ThemeResource SystemAccentColor}"
                                      Opacity="0.1" Margin="-4"/>

                                <Path x:Name="RemovedGlowPath"
                                      Data="{StaticResource HexagonPathData}"
                                      Stretch="Fill" 
                                      Fill="Red"
                                      Margin="-3"
                                      Opacity="{Binding Installed, Converter={StaticResource InverseBoolToOpacity}, FallbackValue=0}"/>

                                <Path x:Name="SelectedGlowPath" Data="{StaticResource HexagonPathData}"
                                      Stretch="Fill"
                                      Fill="Red"
                                      Margin="-7"
                                      Opacity="0"/>

                                <Path x:Name="BorderPath"
                                      Data="{StaticResource HexagonPathData}"
                                      Stretch="Fill"
                                      Stroke="{ThemeResource SystemAccentColor}"
                                      StrokeThickness="2"/>

                                <Path Data="{StaticResource HexagonPathData}"
                                      Fill="{ThemeResource LayerFillColorDefaultBrush}"
                                      Stretch="Fill"
                                      Opacity="0.9"/>

                                <ContentPresenter HorizontalAlignment="Stretch" 
                                          VerticalAlignment="Stretch"/>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TglPackages" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid x:Name="RootGrid" Background="Transparent">
                            <Image x:Name="Icon"
                                   Width="56"
                                   Height="56"
                                   Source="{TemplateBinding Tag}"
                                   Stretch="Uniform"
                                   Opacity="0.4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                                <Image.OpacityTransition>
                                    <ScalarTransition Duration="0:0:0.2"/>
                                </Image.OpacityTransition>
                            </Image>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <VisualState.Setters>
                                            <Setter Target="Icon.Opacity" Value="1.0"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked"/>
                                </VisualStateGroup>

                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="Icon.Opacity" Value="0.7"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="Icon.Scale" Value="0.9,0.9,1.0"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

