                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="ClearSelection"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
