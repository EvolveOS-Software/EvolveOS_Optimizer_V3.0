<Page
    x:Class="EvolveOS_Optimizer.Pages.SystemAppsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EvolveOS_Optimizer.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:EvolveOS_Optimizer.Utilities.Converters"
    xmlns:helpers="using:EvolveOS_Optimizer.Utilities.Helpers"
    mc:Ignorable="d" NavigationCacheMode="Disabled" Unloaded="Page_Unloaded">
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="24,6,24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <AutoSuggestBox x:Name="AppSearchBox"
                            PlaceholderText="{helpers:ResourceString Key=SystemAppsPage_SearchBar}"
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            MinWidth="80"
                            MaxWidth="300"
                            Height="34"
                            Visibility="Collapsed"
                            QueryIcon="Zoom"
                            TextChanged="AppSearchBox_TextChanged"
                            QuerySubmitted="AppSearchBox_QuerySubmitted"/>

            <StackPanel x:Name="TempStackButtonTextBar"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                <Grid>
                    <StackPanel Orientation="Horizontal" x:Name="TempButtonStack">
                        <FontIcon Glyph="&#xEA99;" Margin="0,0,12,0"/>
                        <Button Content="{helpers:ResourceString Key=SystemAppsPage_TempButton}" Click="TempButton_Click"/>
                    </StackPanel>
                    <StackPanel x:Name="TempStack" Visibility="Collapsed">
                        <ProgressBar x:Name="TempProgress" Margin="3" IsIndeterminate="True" Visibility="Collapsed"/>
                        <TextBlock x:Name="TempStatusText" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Margin="0,6,12,6"
                       x:Name="installedAppsCount"
                       Visibility="Collapsed"
                       TextWrapping="Wrap"/>

            <controls:WrapPanel Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                <StackPanel x:Name="appsFilterText" Margin="0,6,0,6" Visibility="Collapsed" Orientation="Horizontal">
                    <FontIcon Glyph="&#xE71C;" FontSize="{StaticResource TextBoxIconFontSize}"/>
                    <TextBlock Text="{helpers:ResourceString Key=SystemAppsPage_AppsFilter}" Style="{StaticResource DetailBodyBaseMediumStyle}" Margin="6,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <ComboBox Width="190" x:Name="appsFilter" Margin="8,6,0,6" VerticalAlignment="Center" Visibility="Collapsed" SelectedIndex="0" SelectionChanged="appsFilter_SelectionChanged">
                    <ComboBoxItem Content="{helpers:ResourceString Key=SystemAppsPage_StandardApps}" Tag="Standard"/>
                    <ComboBoxItem Content="{helpers:ResourceString Key=SystemAppsPage_AllApps}" Tag="All"/>
                    <ComboBoxItem Content="{helpers:ResourceString Key=SystemAppsPage_Win32Apps}" Tag="Win32"/>
                </ComboBox>

                <Button Content="{helpers:ResourceString Key=SystemAppsPage_UninstallButton}"  Margin="12,6,0,6" x:Name="uninstallButton" Visibility="Collapsed" Click="UninstallSelectedApp_Click" Style="{ThemeResource AccentButtonStyle}"/>
            </controls:WrapPanel>
        </Grid>

        <ScrollViewer Padding="24,14,24,0" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,0,38">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{helpers:ResourceString Key=SystemAppsPage_NoAppFound}" Grid.Row="1" x:Name="noAppFoundText" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Style="{StaticResource DetailBodyBaseMediumStyle}"/>

                <StackPanel Margin="10" x:Name="gettingAppsLoading" Grid.Row="1" VerticalAlignment="Center" Visibility="Visible">
                    <ProgressRing Margin="20" Width="100" Height="100" IsIndeterminate="True"/>
                    <TextBlock Text="{helpers:ResourceString Key=SystemAppsPage_FetchingInstalledApps}" HorizontalAlignment="Center" Style="{StaticResource DetailBodyBaseMediumStyle}"/>
                </StackPanel>

                <TreeView x:Name="appTreeView"
                    Grid.Row="1" Visibility="Collapsed"
                    ItemsSource="{x:Bind ViewModel.SystemAppList, Mode=OneWay, FallbackValue={x:Null}}"
                    SelectionMode="Multiple"
                    DragItemsStarting="AppTreeView_DragItemsStarting"
                    ItemInvoked="appTreeView_ItemInvoked"
                    VirtualizingStackPanel.VirtualizationMode="Recycling">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="CornerRadius" Value="4"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Padding="5,0,5,0">
                                    <Grid Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CircleElevationBorderBrush}" BorderThickness="1" CornerRadius="4" Margin="-30,0,18,0" Width="48" Height="48">
                                        <Image Source="{Binding Item2}" Width="38" Height="38" Visibility="{Binding Item2, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </Grid>
                                    <TextBlock Text="{Binding Item1}" VerticalAlignment="Center" TextWrapping="WrapWholeWords" />
                                </StackPanel>
                                <TextBlock VerticalAlignment="Center" Visibility="{Binding Item3}" Opacity="0.7" HorizontalAlignment="Right" Style="{StaticResource CaptionTextBlockStyle}" Text="win32" Grid.Column="1"/>
                            </Grid>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="uninstallingStatusText" Margin="36,6" Grid.Column="0" Style="{StaticResource CaptionTextBlockStyle}" Visibility="Collapsed" TextWrapping="Wrap"/>
            <ProgressBar x:Name="uninstallingStatusBar" Margin="0,0,36,0" Grid.Column="1" Width="Auto" Minimum="0" Maximum="100"/>
        </Grid>
    </Grid>
</Page>