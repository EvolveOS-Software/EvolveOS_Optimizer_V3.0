<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EvolveOS_Optimizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EvolveOS_Optimizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:EvolveOS_Optimizer.Core.ViewModel"
    mc:Ignorable="d" 
    d:Height="870" 
    d:Width="1575"
    Title="EvolveOS Optimizer">

    <Grid x:Name="RootGrid" Background="Transparent">
        <Grid.DataContext>
            <vm:MainWinViewModel/>
        </Grid.DataContext>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Height="45" VerticalAlignment="Top">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="16,0,0,0">
                <Image Source="/Assets/EvolveOS_Optimizer.ico" Width="18" Height="18" />
                <TextBlock Text="EvolveOS Optimizer"
                           FontFamily="{StaticResource Jura-SemiBold}"
                           VerticalAlignment="Center" 
                           Margin="12,0,0,0"
                           FontSize="14"
                           Foreground="{StaticResource MyDynamicAccentBrush}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid Width="30" Height="30">
                    <Border CornerRadius="15"
                            Width="30"
                            Height="30"
                            BorderBrush="{StaticResource MyDynamicAccentBrush}"
                            BorderThickness="1">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding DisplayProfileAvatar, Mode=OneWay}"
                                        Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>

                    <Ellipse Stroke="{StaticResource MyDynamicAccentBrush}" 
                             StrokeThickness="0.5"
                             Opacity="0.5"
                             Margin="-2"/>
                </Grid>

                <TextBlock x:Name="DisplayProfileName"
                           Text="{Binding DisplayProfileName}"
                           FontFamily="{StaticResource Jura-Regular}"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="{StaticResource MyDynamicAccentBrush}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column="1"
                            Content="{Binding CurrentView}"
                            Margin="5,2,0,13"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"/>

            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Canvas.ZIndex="100">
                <Border Width="55" 
                        Background="{ThemeResource LayerFillColorDefaultBrush}" 
                        CornerRadius="10"
                        Margin="10,15,0,50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Translation="0,0,8">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,15,0,50">

                    <StackPanel Orientation="Vertical" Spacing="4" Padding="10,10,0,0" HorizontalAlignment="Left">
                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Home"
                                     Tag="{x:Bind GetText('Nav_Home'), Mode=OneWay}"
                                     IsChecked="True">
                            <FontIcon Glyph="&#xE80F;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Utilities"
                                     Tag="{x:Bind GetText('Nav_Utilities'), Mode=OneWay}">
                            <FontIcon Glyph="&#xE74C;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Privacy"
                                     Tag="{x:Bind GetText('Nav_Privacy'), Mode=OneWay}">
                            <FontIcon Glyph="&#xEE3F;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Interface"
                                     Tag="{x:Bind GetText('Nav_Interface'), Mode=OneWay}">
                            <FontIcon Glyph="&#xE790;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Packages"
                                     Tag="{x:Bind GetText('Nav_Packages'), Mode=OneWay}">
                            <FontIcon Glyph="&#xE74C;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Services"
                                     Tag="{x:Bind GetText('Nav_Services'), Mode=OneWay}">
                            <FontIcon Glyph="&#xEC05;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="System"
                                     Tag="{x:Bind GetText('Nav_System'), Mode=OneWay}">
                            <FontIcon Glyph="&#xEDA2;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Settings"
                                     Tag="{x:Bind GetText('Nav_Settings'), Mode=OneWay}">
                            <SymbolIcon Symbol="Setting" />
                        </RadioButton>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>