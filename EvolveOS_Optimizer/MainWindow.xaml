<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EvolveOS_Optimizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EvolveOS_Optimizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:EvolveOS_Optimizer.Utilities.Helpers"
    xmlns:vm="using:EvolveOS_Optimizer.Core.ViewModel"
    mc:Ignorable="d" 
    d:Height="870" 
    d:Width="1575"
    Title="EvolveOS Optimizer">

    <Grid x:Name="RootGrid" Background="Transparent">
        <Grid.DataContext>
            <vm:MainWinViewModel/>
        </Grid.DataContext>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Height="45" Visibility="Visible" VerticalAlignment="Top">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="16,0,0,0">
                <Image Source="/Assets/EvolveOS_Optimizer.ico" Width="18" Height="18" />
                <TextBlock Text="EvolveOS Optimizer"
                           FontFamily="{StaticResource Jura-SemiBold}"
                           VerticalAlignment="Center" 
                           Margin="12,0,0,0"
                           FontSize="14"
                           Foreground="{StaticResource MyDynamicAccentBrush}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid Width="30" Height="30">
                    <Border CornerRadius="15"
                            Width="30"
                            Height="30"
                            BorderBrush="{StaticResource MyDynamicAccentBrush}"
                            BorderThickness="1">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding DisplayProfileAvatar, Mode=OneWay}"
                                        Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>

                    <Ellipse Stroke="{StaticResource MyDynamicAccentBrush}" 
                             StrokeThickness="0.5"
                             Opacity="0.5"
                             Margin="-2"/>
                </Grid>

                <TextBlock x:Name="DisplayProfileName"
                           Text="{Binding DisplayProfileName}"
                           FontFamily="{StaticResource Jura-Regular}"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="{StaticResource MyDynamicAccentBrush}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>

        </Grid>

       

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ContentControl x:Name="RootContentControl"
                            Grid.Column="1"
                            Content="{Binding CurrentView}"
                            Margin="5,2,0,13"
                            Scale="1,1,1"
                            Opacity="1"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch" />

            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Canvas.ZIndex="100">
                <Border Width="55" 
                        Background="{ThemeResource LayerFillColorDefaultBrush}" 
                        CornerRadius="10"
                        Margin="10,15,0,50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Translation="0,0,8">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,15,0,50">

                    <StackPanel Orientation="Vertical" Spacing="4" Padding="10,10,0,0" HorizontalAlignment="Left">
                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Home"
                                     Tag="{x:Bind GetText('Nav_Home'), Mode=OneWay}"
                                     IsChecked="True">
                            <FontIcon Glyph="&#xE80F;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Security"
                                     Tag="{x:Bind GetText('Nav_Security'),Mode=OneWay}">
                            <FontIcon Glyph="&#xEA18;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Utilities"
                                     Tag="{x:Bind GetText('Nav_Utilities'), Mode=OneWay}">
                            <FontIcon Glyph="&#xE74C;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Privacy"
                                     Tag="{x:Bind GetText('Nav_Privacy'), Mode=OneWay}">
                            <FontIcon Glyph="&#xEE3F;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Interface"
                                     Tag="{x:Bind GetText('Nav_Interface'), Mode=OneWay}">
                            <FontIcon Glyph="&#xE790;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Packages"
                                     Tag="{x:Bind GetText('Nav_Packages'), Mode=OneWay}">
                            <FontIcon Glyph="&#xE74C;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="GroupPolicy"
                                     Tag="{x:Bind GetText('Nav_GroupPolicy'), Mode=OneWay}">
                            <FontIcon Glyph="&#xE9D5;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Services"
                                     Tag="{x:Bind GetText('Nav_Services'), Mode=OneWay}">
                            <FontIcon Glyph="&#xEC05;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="System"
                                     Tag="{x:Bind GetText('Nav_System'), Mode=OneWay}">
                            <FontIcon Glyph="&#xEDA2;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}"
                                     Command="{Binding ExecuteNavigateCommand}"
                                     CommandParameter="Settings"
                                     Tag="{x:Bind GetText('Nav_Settings'), Mode=OneWay}">
                            <SymbolIcon Symbol="Setting" />
                        </RadioButton>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Border x:Name="UpdateBanner"
                Grid.RowSpan="3"
                Visibility="Collapsed"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Width="600" Margin="0,0,0,200"
                Padding="15,12"
                Background="{ThemeResource SystemAccentColor}"
                CornerRadius="10"
                Canvas.ZIndex="1000"
                Opacity="0"
                Translation="0,100,0">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <StackPanel Spacing="8">
                <Grid>
                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <FontIcon Glyph="&#xE896;" FontSize="18" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="{helpers:ResourceString Key=Update_Banner_Message}"
                            Foreground="White"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Jura-SemiBold}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                        <Button x:Name="BtnUpdateAction"
                                Content="{helpers:ResourceString Key=Update_Banner_ConfirmButton}"
                                FontFamily="{StaticResource Jura}"
                                Click="UpdateNow_Click"
                                Style="{StaticResource AccentButtonStyle}"
                                Background="White"
                                Foreground="Black"
                                BorderThickness="0"
                                Padding="15,4"
                                CornerRadius="5"/>
                        <Button Click="DismissBanner_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="5">
                            <SymbolIcon Symbol="Cancel" Foreground="White" />
                        </Button>
                    </StackPanel>
                </Grid>

                <StackPanel x:Name="DownloadProgressArea" Visibility="Visible" Spacing="4" Margin="0,5,0,0">
                    <StackPanel.Resources>
                        <Storyboard x:Name="PulseAnimation">
                            <DoubleAnimation Storyboard.TargetName="ProgressDownload"
                                             Storyboard.TargetProperty="Opacity"
                                             From="0.4" To="1.0"
                                             Duration="0:0:1"
                                             AutoReverse="True"
                                             RepeatBehavior="Forever">
                                <DoubleAnimation.EasingFunction>
                                    <SineEase EasingMode="EaseInOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </StackPanel.Resources>

                    <ProgressBar x:Name="ProgressDownload"
                                 Minimum="0"
                                 Maximum="100"
                                 Height="4"
                                 Foreground="{ThemeResource MyDynamicAccentBrush}"
                                 Background="Transparent"
                                 Opacity="0.8"/>
                    <TextBlock x:Name="SizeByte"
                               Text="0 KB / 0 KB"
                               FontSize="10"
                               FontFamily="{StaticResource Jura}"
                               Foreground="White"
                               HorizontalAlignment="Right" Opacity="0.9"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid x:Name="GlobalOverlay" 
              x:FieldModifier="public"
              Grid.RowSpan="2" 
              Visibility="Collapsed" 
              Background="#AA000000" 
              Canvas.ZIndex="99999">

            <Border Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="30"
                    MinWidth="450" MaxWidth="600" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel x:Name="OverlayContent">
                    <TextBlock x:Name="TxtGlobalTitle" x:FieldModifier="public" FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtGlobalMessage" x:FieldModifier="public" TextWrapping="Wrap" TextAlignment="Center" Margin="0,15" Opacity="0.8"/>
                    <TextBlock x:Name="TxtGlobalQuestion" x:FieldModifier="public" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{ThemeResource SystemAccentColor}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
                        <Button x:Name="BtnGlobalDelete" x:FieldModifier="public" Content="Delete" Style="{StaticResource AccentButtonStyle}" MinWidth="130"/>
                        <Button x:Name="BtnGlobalCancel" x:FieldModifier="public" Content="Cancel" MinWidth="130"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>