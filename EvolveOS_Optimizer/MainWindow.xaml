<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EvolveOS_Optimizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EvolveOS_Optimizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:EvolveOS_Optimizer.Core.ViewModel"
    mc:Ignorable="d" 
    d:Height="870" 
    d:Width="1575"
    Title="EvolveOS Optimizer">

    <Grid x:Name="RootGrid" Background="Transparent">
        <Grid.DataContext>
            <vm:MainWinViewModel/>
        </Grid.DataContext>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Height="45" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                <Image Source="/Assets/EvolveOS_Optimizer.ico" Width="18" Height="18" />
                <TextBlock Text="EvolveOS Optimizer" 
                           VerticalAlignment="Center" 
                           Margin="12,0,0,0" 
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource MyDynamicAccentBrush}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column="1" 
                            Content="{Binding CurrentView}" 
                            Margin="5,2,0,13"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"/>

            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Canvas.ZIndex="100">

                <Border Width="55" 
                        Background="{ThemeResource LayerFillColorDefaultBrush}" 
                        CornerRadius="10" 
                        Margin="10,15,0,50" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Translation="0,0,8"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,15,0,50">

                    <StackPanel Orientation="Vertical" Spacing="4" Padding="10,10,0,0" HorizontalAlignment="Left">
                        <RadioButton Style="{StaticResource BtnNavigation}" 
                                     Command="{Binding NavigateCommand}" CommandParameter="Home"
                                     Tag="Home" IsChecked="True">
                            <FontIcon Glyph="&#xE80F;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}" 
                                     Command="{Binding NavigateCommand}" CommandParameter="Utilities"
                                     Tag="Utilities">
                            <FontIcon Glyph="&#xE74C;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}" 
                                     Command="{Binding NavigateCommand}" CommandParameter="Privacy"
                                     Tag="Privacy">
                            <FontIcon Glyph="&#xEE3F;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}" 
                                     Command="{Binding NavigateCommand}" CommandParameter="Interface"
                                     Tag="Interface">
                            <FontIcon Glyph="&#xE790;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}" 
                                     Command="{Binding NavigateCommand}" CommandParameter="Packages"
                                     Tag="Packages">
                            <FontIcon Glyph="&#xE74C;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}" 
                                     Command="{Binding NavigateCommand}" CommandParameter="Services"
                                     Tag="Services">
                            <FontIcon Glyph="&#xEC05;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}" 
                                     Command="{Binding NavigateCommand}" CommandParameter="System"
                                     Tag="System">
                            <FontIcon Glyph="&#xEDA2;" FontSize="18"/>
                        </RadioButton>

                        <RadioButton Style="{StaticResource BtnNavigation}" 
                                     Command="{Binding NavigateCommand}" CommandParameter="Settings"
                                     Tag="Settings">
                            <SymbolIcon Symbol="Setting" />
                        </RadioButton>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>